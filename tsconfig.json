{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "baseUrl": "src",
    "typeRoots": [
      "./src/@types",
      "src/custom_typings",
      "./@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["*"],
      "@protocols": ["./protocols.ts"],
      "@prisma_config/*": ["../prisma/*"]
    }
  }
}
